<!-- signin.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Signin</title>
    <style>
        @media (max-width: 768px) {
            .form-control {
                width: 100% !important;
            }
            .container {
                padding: 0 15px;
            }
        }
        
        @media (max-height: 600px) {
            body {
                height: 100vh !important;
            }
        }
        
        .form-container {
            max-width: 800px;
            margin: 0 auto;
        }
    </style>
</head>
<body style="background: url(https://images.unsplash.com/photo-1529539795054-3c162aab037a?fm=jpg&q=60&w=3000&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MjB8fGxvZ2lufGVufDB8fDB8fHww);
             background-size: cover;
             background-position: center;
             width: 100%;
             height: 600px;
             min-height: 100vh;">
    <%- include('./partials/nav') %>
    
    <div class="container mt-4">
        <div class="form-container">
            <form action="/user/signin" method="post">
                <!-- Email Field -->
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label" style="font-style: italic; font-size: x-large; color: rgb(11, 11, 11);">Email address</label>
                    <input style="width:50%;" type="email" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                </div>
                
                <!-- Password Field -->
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label" style="font-style: italic; font-size: x-large; color: rgb(8, 8, 8);">Password</label>
                    <input style="width:60%;" type="password" name="password" class="form-control" id="exampleInputPassword1">
                </div>
                
                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary" style="background-color: green;">Submit</button>
            </form>
        </div>
    </div>
    
    <%- include('./partials/scripts') %>
</body>
</html>